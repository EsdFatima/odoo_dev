<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_view_form" model="ir.ui.view">
            <field name="name">product.view.form</field>
            <field name="model">product</field>
            <field name="inherit_id" ref="itex_product.product_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='total_price']" position="after">
                    <field name="color"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>