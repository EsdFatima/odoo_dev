<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <!-- Define a new record for the tree view of the "travel.travel" model -->

    <record id="view_voyage_tree" model="ir.ui.view">
        <field name="name">travel.tree</field>
        <field name="model">travel.travel</field>
        <field name="arch" type="xml">
            <tree>

                <!-- Specify the fields to display in the tree view -->

                <field name="contact_id"/>
                <field name="name"/>
                <field name="depart"/>
                <field name="destination"/>
                <field name="time_depart"/>
                <field name="time_depart"/>
                <field name="montant"/>





            </tree>
        </field>
    </record>
     <!-- Define an action for the "travel.travel" model -->
    <record id="action_voyage" model="ir.actions.act_window">
        <field name="name">voyage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">travel.travel</field>
        <field name="view_mode">tree,form</field>
    </record>

<!-- Create a menu item for "Travels" -->
    <menuitem id="voyages"
              name="Travels"
              parent="Travel_Contact"
              action="action_voyage"
              sequence="10"/>
</odoo>